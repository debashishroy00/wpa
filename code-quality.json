{
  "rules": {
    "maxFileLines": 300,
    "hardLimitLines": 500,
    "maxFunctionLines": 30,
    "maxComplexity": 10
  },
  "targetLimits": {
    "serviceFiles": 200,
    "componentFiles": 150,
    "routerFiles": 100,
    "modelFiles": 100,
    "apiServiceFiles": 50
  },
  "exclude": [
    "*.backup*",
    "App.tsx.backup-working",
    "node_modules",
    "build",
    "dist",
    "venv",
    "__pycache__"
  ],
  "patterns": {
    "frontend": "frontend/src/**/*.{ts,tsx,js,jsx}",
    "backend": "backend/app/**/*.py"
  },
  "snapshot": {
    "maxServiceFileLines": 200,
    "maxRouterFileLines": 100,
    "maxModelFileLines": 100,
    "maxComponentFileLines": 150
  }
}